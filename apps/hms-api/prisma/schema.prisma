// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

generator nestjsDto {
  provider                        = "prisma-generator-nestjs-dto"
  output                          = "../src/generated/dtos"
  outputToNestJsResourceStructure = "false"
  exportRelationModifierClasses   = "true"
  reExport                        = "false"
  createDtoPrefix                 = "Create"
  updateDtoPrefix                 = "Update"
  dtoSuffix                       = "Dto"
  entityPrefix                    = ""
  entitySuffix                    = ""
  fileNamingStyle                 = "kebab"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum CandidateStatus {
  HIRED
}

enum OpportunityState {
  OPEN
  CLOSED
}

enum ResidencyStatus {
  CITIZEN
  PR
  PR_WIP
  PERMIT
  INELIGIBLE
}

model User {
  /// @DtoCreateOptional
  /// @DtoUpdateHidden
  id         String    @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  idir_id    String    @unique
  name       String
  roles      String[]
  /// @DtoCreateHidden
  /// @DtoUpdateHidden
  created_at DateTime  @default(now())
  /// @DtoCreateHidden
  /// @DtoUpdateHidden
  updated_at DateTime? @updatedAt

  candidates      Candidate[]
  hiring_managers HiringManager[]

  @@map("user")
}

model DigitalTalentRole {
  /// @DtoCreateOptional
  /// @DtoUpdateHidden
  id             String    @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  name           String
  classification String
  /// @DtoCreateHidden
  /// @DtoUpdateHidden
  created_at     DateTime  @default(now())
  /// @DtoCreateHidden
  /// @DtoUpdateHidden
  updated_at     DateTime? @updatedAt

  candidates  Candidate[]
  Opportunity Opportunity[]

  @@map("digital_talent_role")
}

model Location {
  /// @DtoCreateOptional
  /// @DtoUpdateHidden
  id         String    @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  name       String
  /// @DtoCreateHidden
  /// @DtoUpdateHidden
  created_at DateTime  @default(now())
  /// @DtoCreateHidden
  /// @DtoUpdateHidden
  updated_at DateTime? @updatedAt

  candidates    CandidateLocation[]
  opportunities OpportunityLocation[]

  @@map("location")
}

model Ministry {
  /// @DtoCreateOptional
  /// @DtoUpdateHidden
  id         String    @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  code       String
  name       String
  /// @DtoCreateHidden
  /// @DtoUpdateHidden
  created_at DateTime  @default(now())
  /// @DtoCreateHidden
  /// @DtoUpdateHidden
  updated_at DateTime? @updatedAt

  hiring_managers HiringManager[]

  @@map("ministry")
}

model Skill {
  /// @DtoCreateOptional
  /// @DtoUpdateHidden
  id                   String    @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  name                 String
  min_years_experience Int
  /// @DtoCreateHidden
  /// @DtoUpdateHidden
  created_at           DateTime  @default(now())
  /// @DtoCreateHidden
  /// @DtoUpdateHidden
  updated_at           DateTime? @updatedAt

  candidates    CandidateSkill[]
  opportunities OpportunitySkill[]

  @@map("skill")
}

model Candidate {
  /// @DtoCreateOptional
  /// @DtoUpdateHidden
  id                      String           @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  /// @DtoCreateOptional
  /// @DtoUpdateOptional
  assigned_to_id          String?          @db.Uuid
  /// @DtoCreateOptional
  /// @DtoUpdateOptional
  role_id                 String?          @db.Uuid
  name                    String?
  email_address           String?
  linkedin_url            String?
  available_at            DateTime?
  would_relocate          Boolean?
  num_years_exp           Int?
  residency_status        ResidencyStatus?
  status                  CandidateStatus?
  is_contacted            Boolean?
  knowledge_and_abilities String?
  links                   String[]
  marketing_qualities     String[]
  /// @DtoCreateHidden
  /// @DtoUpdateHidden
  created_at              DateTime         @default(now())
  /// @DtoCreateHidden
  /// @DtoUpdateHidden
  updated_at              DateTime?        @updatedAt

  locations     CandidateLocation[]
  opportunities CandidateOpportunity[]
  skills        CandidateSkill[]
  assigned_to   User?                  @relation(fields: [assigned_to_id], references: [id])
  role          DigitalTalentRole?     @relation(fields: [role_id], references: [id])

  @@map("candidate")
}

model CandidateLocation {
  /// @DtoCreateOptional
  /// @DtoUpdateOptional
  candidate_id String    @db.Uuid
  /// @DtoCreateOptional
  /// @DtoUpdateOptional
  location_id  String    @db.Uuid
  rank         Int
  /// @DtoCreateHidden
  /// @DtoUpdateHidden
  created_at   DateTime  @default(now())
  /// @DtoCreateHidden
  /// @DtoUpdateHidden
  updated_at   DateTime? @updatedAt

  candidate Candidate @relation(fields: [candidate_id], references: [id])
  location  Location  @relation(fields: [location_id], references: [id])

  @@id([candidate_id, location_id])
  @@map("candidate_location")
}

model CandidateOpportunity {
  /// @DtoCreateOptional
  /// @DtoUpdateOptional
  candidate_id   String    @db.Uuid
  /// @DtoCreateOptional
  /// @DtoUpdateOptional
  opportunity_id String    @db.Uuid
  /// @DtoCreateHidden
  /// @DtoUpdateHidden
  created_at     DateTime  @default(now())
  /// @DtoCreateHidden
  /// @DtoUpdateHidden
  updated_at     DateTime? @updatedAt

  candidate   Candidate   @relation(fields: [candidate_id], references: [id])
  opportunity Opportunity @relation(fields: [opportunity_id], references: [id])

  @@id([candidate_id, opportunity_id])
  @@map("candidate_opportunity")
}

model CandidateSkill {
  /// @DtoCreateOptional
  /// @DtoUpdateOptional
  candidate_id String    @db.Uuid
  /// @DtoCreateOptional
  /// @DtoUpdateOptional
  skill_id     String    @db.Uuid
  /// @DtoCreateHidden
  /// @DtoUpdateHidden
  created_at   DateTime  @default(now())
  /// @DtoCreateHidden
  /// @DtoUpdateHidden
  updated_at   DateTime? @updatedAt

  candidate Candidate @relation(fields: [candidate_id], references: [id])
  skill     Skill     @relation(fields: [skill_id], references: [id])

  @@id([candidate_id, skill_id])
  @@map("candidate_skill")
}

model HiringManager {
  /// @DtoCreateOptional
  /// @DtoUpdateHidden
  id             String    @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  /// @DtoCreateOptional
  /// @DtoUpdateOptional
  assigned_to_id String?   @db.Uuid
  /// @DtoCreateOptional
  /// @DtoUpdateOptional
  ministry_id    String?   @db.Uuid
  name           String?
  /// @DtoCreateHidden
  /// @DtoUpdateHidden
  created_at     DateTime  @default(now())
  /// @DtoCreateHidden
  /// @DtoUpdateHidden
  updated_at     DateTime? @updatedAt

  ministry    Ministry? @relation(fields: [ministry_id], references: [id])
  assigned_to User?     @relation(fields: [assigned_to_id], references: [id])

  @@map("hiring_manager")
}

model Team {
  /// @DtoCreateOptional
  /// @DtoUpdateHidden
  id          String    @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  name        String?
  description String?
  links       String[]
  /// @DtoCreateHidden
  /// @DtoUpdateHidden
  created_at  DateTime  @default(now())
  /// @DtoCreateHidden
  /// @DtoUpdateHidden
  updated_at  DateTime? @updatedAt

  opportunities Opportunity[]

  @@map("team")
}

model Opportunity {
  /// @DtoCreateOptional
  /// @DtoUpdateHidden
  id         String           @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  /// @DtoCreateOptional
  /// @DtoUpdateOptional
  role_id    String           @db.Uuid
  /// @DtoCreateOptional
  /// @DtoUpdateOptional
  team_id    String           @db.Uuid
  state      OpportunityState
  /// @DtoCreateHidden
  /// @DtoUpdateHidden
  created_at DateTime         @default(now())
  /// @DtoCreateHidden
  /// @DtoUpdateHidden
  updated_at DateTime?        @updatedAt

  candidates CandidateOpportunity[]
  locations  OpportunityLocation[]
  skills     OpportunitySkill[]
  role       DigitalTalentRole      @relation(fields: [role_id], references: [id])
  team       Team                   @relation(fields: [team_id], references: [id])

  @@map("opportunity")
}

model OpportunityLocation {
  /// @DtoCreateOptional
  /// @DtoUpdateOptional
  location_id    String    @db.Uuid
  /// @DtoCreateOptional
  /// @DtoUpdateOptional
  opportunity_id String    @db.Uuid
  /// @DtoCreateHidden
  /// @DtoUpdateHidden
  created_at     DateTime  @default(now())
  /// @DtoCreateHidden
  /// @DtoUpdateHidden
  updated_at     DateTime? @updatedAt

  location    Location    @relation(fields: [location_id], references: [id])
  opportunity Opportunity @relation(fields: [opportunity_id], references: [id])

  @@id([location_id, opportunity_id])
  @@map("opportunity_location")
}

model OpportunitySkill {
  /// @DtoCreateOptional
  /// @DtoUpdateOptional
  opportunity_id String    @db.Uuid
  /// @DtoCreateOptional
  /// @DtoUpdateOptional
  skill_id       String    @db.Uuid
  is_mandatory   Boolean
  /// @DtoCreateHidden
  /// @DtoUpdateHidden
  created_at     DateTime  @default(now())
  /// @DtoCreateHidden
  /// @DtoUpdateHidden
  updated_at     DateTime? @updatedAt

  opportunity Opportunity @relation(fields: [opportunity_id], references: [id])
  skill       Skill       @relation(fields: [skill_id], references: [id])

  @@id([opportunity_id, skill_id])
  @@map("opportunity_skill")
}
